#!/usr/bin/env bash
#
# pre-commit hook
# Runs linting checks on staged files
#

set -e

echo "Running pre-commit checks..."

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any checks fail
CHECKS_FAILED=0

# Placeholder for markdown linting
echo -e "${YELLOW}[PLACEHOLDER]${NC} Markdown linting check"
# TODO: Add markdownlint
# Example: markdownlint '**/*.md' --ignore node_modules

# Placeholder for prettier formatting
echo -e "${YELLOW}[PLACEHOLDER]${NC} Prettier formatting check"
# TODO: Add prettier check
# Example: prettier --check '**/*.{md,json,yml,yaml}'

# Placeholder for Python linting (for scripts)
echo -e "${YELLOW}[PLACEHOLDER]${NC} Python linting check"
# TODO: Add ruff or black for Python files
# Example: ruff check meta/*/scripts/*.py

# Placeholder for YAML validation
echo -e "${YELLOW}[PLACEHOLDER]${NC} YAML validation check"
# TODO: Add yamllint
# Example: yamllint **/*.md (for YAML frontmatter)

if [ $CHECKS_FAILED -eq 0 ]; then
    echo -e "${GREEN}✓${NC} All pre-commit checks passed (placeholders only)"
    exit 0
else
    echo -e "${RED}✗${NC} Some pre-commit checks failed"
    exit 1
fi
